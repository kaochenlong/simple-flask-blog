{% extends "layout.html.jinja" %}

{% block content %}
  <h1 class="text-3xl">Hello World</h1>

  <section class="mt-2 flex flex-col gap-4">
    {% for post in posts %}
    <div>
      <header class="my-1">
        <h2 class="text-lg font-bold">
          <a href="{{ url_for("post.show", id=post.id) }}">{{ post.title }}</a>
        </h2>
      </header>
      <article class="bg-slate-50 p-2 flex flex-col gap-2">
        <time datetime="{{ post.created_at.isoformat() }}"
              class="text-xs text-slate-500">
              {{ post.created_at.strftime('%Y-%m-%d') }}
        </time>
        <p>
          {{ post.content }}
        </p>
      </article>
    </div>
    {% endfor %}
  </section>
{% endblock %}
