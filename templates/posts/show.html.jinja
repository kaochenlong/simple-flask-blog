{% extends "layout.html.jinja" %}

{% block content %}
  <h1 class="text-2xl">{{ post.title }}</h1>
  <article>
    <time datetime="{{ post.created_at.isoformat() }}"
              class="text-xs text-slate-500">
              {{ post.created_at.strftime('%Y-%m-%d') }}
    </time>
    <p class="bg-gray-50 px-4 py-2">{{ post.content }}</p>
  </article>
{% endblock %}
