{% macro render_field(field) %}
  <div class="flex flex-col gap-2">
    {{ field.label(class="font-bold") }}
    {{ field(**kwargs)|safe }}
    {% if field.errors %}
      <ul>
      {% for error in field.errors %}
        <li class="px-1 font-bold text-red-500">{{ error }}</li>
      {% endfor %}
      </ul>
    {% endif %}
  </div>
{% endmacro %}
